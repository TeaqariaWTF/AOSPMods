<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:search="http://schemas.android.com/apk/sh.siava.pixelxpert.ui.preferencesearch">

	<sh.siava.pixelxpert.ui.preferences.IllustrationPreference
		android:key="battery_illustration"
		app:lottie_rawRes="@raw/battery"
		search:ignore="true" />

	<sh.siava.pixelxpert.ui.preferences.MaterialListPreference
		android:defaultValue="0"
		android:entries="@array/battery_style_names"
		android:entryValues="@array/battery_style_codes"
		android:key="BatteryStyle"
		android:summary="%s"
		android:title="@string/battery_style_title"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialRangeSliderPreference
		android:key="BatteryIconScaleFactor"
		android:title="@string/battery_icon_size_title"
		app:defaultValue="50"
		app:iconSpaceReserved="false"
		app:updatesContinuously="true" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="false"
		android:key="BatteryShowPercent"
		android:summaryOff="@string/general_off"
		android:summaryOn="@string/general_on"
		android:title="@string/battery_show_percent_title"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="true"
		android:key="BatteryChargingAnimationEnabled"
		android:summaryOff="@string/general_off"
		android:summaryOn="@string/general_on"
		android:title="@string/battery_show_charging_animation_title"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="false"
		android:key="BIconindicateCharging"
		android:summaryOff="@string/general_off"
		android:summaryOn="@string/general_on"
		android:title="@string/BB_indicate_charging"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialColorPreference
		android:defaultValue="-16711936"
		android:key="batteryIconChargingColor"
		android:title="@string/BB_batteryChargingColor"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="false"
		android:key="BIconindicateFastCharging"
		android:summaryOff="@string/general_off"
		android:summaryOn="@string/general_on"
		android:title="@string/BB_indicate_fast_charging"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialColorPreference
		android:defaultValue="-16776961"
		android:key="batteryIconFastChargingColor"
		android:title="@string/BB_batteryFastChargingColor"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="false"
		android:key="BIconColorful"
		android:summaryOff="@string/general_off"
		android:summaryOn="@string/general_on"
		android:title="@string/BB_colorful_title"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialRangeSliderPreference
		android:key="BIconOpacity"
		android:title="@string/BIcon_Opacity_title"
		app:defaultValue="100"
		app:iconSpaceReserved="false"
		app:updatesContinuously="true" />

	<sh.siava.pixelxpert.ui.preferences.MaterialRangeSliderPreference
		android:key="BIconbatteryWarningRange"
		android:summary="@string/BB_warning_tip"
		android:title="@string/BB_warning_level"
		app:defaultValue="15,40"
		app:iconSpaceReserved="false"
		app:maxVal="100"
		app:minVal="0"
		app:tickInterval="1"
		app:valueCount="2" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="false"
		android:key="BIconTransitColors"
		android:summaryOff="@string/general_off"
		android:summaryOn="@string/general_on"
		android:title="@string/BB_transit_colors"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialColorPreference
		android:defaultValue="-65536"
		android:key="BIconbatteryCriticalColor"
		android:title="@string/BB_batteryCriticalColor"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialColorPreference
		android:defaultValue="-256"
		android:key="BIconbatteryWarningColor"
		android:title="@string/BB_batteryWarningColor"
		app:iconSpaceReserved="false" />

</PreferenceScreen>