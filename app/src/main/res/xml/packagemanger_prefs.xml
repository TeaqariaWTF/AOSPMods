<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:search="http://schemas.android.com/apk/sh.siava.pixelxpert.ui.preferencesearch">

	<sh.siava.pixelxpert.ui.preferences.IllustrationPreference
		android:key="package_manager_illustration"
		app:lottie_rawRes="@raw/package_manager"
		search:ignore="true" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="false"
		android:key="PM_AllowMismatchedSignature"
		android:summaryOff="@string/general_off"
		android:summaryOn="@string/auto_off_five_minutes"
		android:title="@string/pm_bypass_signature_title"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="false"
		android:key="PM_AllowDowngrade"
		android:summaryOff="@string/general_off"
		android:summaryOn="@string/auto_off_five_minutes"
		android:title="@string/pm_allow_downgrade_title"
		app:iconSpaceReserved="false" />

</PreferenceScreen>