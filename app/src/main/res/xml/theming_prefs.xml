<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:search="http://schemas.android.com/apk/sh.siava.pixelxpert.ui.preferencesearch">

	<sh.siava.pixelxpert.ui.preferences.IllustrationPreference
		android:key="theme_illustration"
		app:lottie_rawRes="@raw/theme"
		search:ignore="true" />

	<sh.siava.pixelxpert.ui.preferences.MaterialPreference
		android:key="icon_packs"
		android:title="@string/icon_packs_title"
		app:fragment="sh.siava.pixelxpert.ui.fragments.iconpack.IconPackFragment"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory
		android:key="font_dependent"
		android:title="@string/theme_customization_font_title"
		app:iconSpaceReserved="false"
		search:ignore="true">

		<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
			android:defaultValue="false"
			android:key="enableCustomFonts"
			android:summaryOff="@string/restart_needed"
			android:summaryOn="@string/restart_needed"
			android:title="@string/font_overlays_enable_title"
			app:iconSpaceReserved="false" />

		<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
			android:defaultValue="false"
			android:key="gsans_override"
			android:summaryOff="@string/restart_needed"
			android:summaryOn="@string/restart_needed"
			android:title="@string/gsans_override_title"
			app:iconSpaceReserved="false" />

		<sh.siava.pixelxpert.ui.preferences.MaterialListPreference
			android:defaultValue="None"
			android:entries="@array/FontsOverlayEx_names"
			android:entryValues="@array/FontsOverlayEx"
			android:key="FontsOverlayEx"
			android:summary="%s"
			android:title="@string/theme_customization_font_title"
			app:iconSpaceReserved="false" />

	</sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory>

	<sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory
		android:key="icon_style_header"
		android:title="@string/icons_style_title"
		app:iconSpaceReserved="false"
		search:ignore="true">

		<sh.siava.pixelxpert.ui.preferences.MaterialListPreference
			android:defaultValue="None"
			android:entries="@array/IconPacksOverlayEx_names"
			android:entryValues="@array/IconPacksOverlayEx"
			android:key="IconPacksOverlayEx"
			android:summary="%s"
			android:title="@string/icons_style_title"
			app:iconSpaceReserved="false" />

	</sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory>

	<sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory
		android:key="icon_shape_header"
		android:title="@string/icon_shapes_title"
		app:iconSpaceReserved="false"
		search:ignore="true">

		<sh.siava.pixelxpert.ui.preferences.MaterialListPreference
			android:defaultValue="None"
			android:entries="@array/IconShapesOverlayEx_names"
			android:entryValues="@array/IconShapesOverlayEx"
			android:key="IconShapesOverlayEx"
			android:summary="%s"
			android:title="@string/icon_shapes_title"
			app:iconSpaceReserved="false" />

	</sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory>

	<sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory
		android:key="signal_icon_theme_header"
		android:title="@string/signal_icons_theme_title"
		app:iconSpaceReserved="false"
		search:ignore="true">

		<sh.siava.pixelxpert.ui.preferences.MaterialListPreference
			android:defaultValue="None"
			android:entries="@array/SignalIconsOverlayEx_names"
			android:entryValues="@array/SignalIconsOverlayEx"
			android:key="SignalIconsOverlayEx"
			android:summary="%s"
			android:title="@string/signal_icons_theme_title"
			app:iconSpaceReserved="false" />

	</sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory>

	<sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory
		android:key="dark_theme_styles_header"
		android:title="@string/dt_styles_category"
		app:iconSpaceReserved="false"
		search:ignore="true">

		<sh.siava.pixelxpert.ui.preferences.MaterialListPreference
			android:defaultValue="None"
			android:entries="@array/DTStylesOverlayEx_names"
			android:entryValues="@array/DTStylesOverlayEx"
			android:key="DTStylesOverlayEx"
			android:summary="@string/caution_unstable"
			android:title="@string/dt_styles"
			app:iconSpaceReserved="false" />

	</sh.siava.pixelxpert.ui.preferences.MaterialPreferenceCategory>
</PreferenceScreen>