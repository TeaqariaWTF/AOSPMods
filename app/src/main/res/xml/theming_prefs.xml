<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:search="http://schemas.android.com/apk/sh.siava.pixelxpert.ui.preferencesearch">

	<sh.siava.pixelxpert.ui.preferences.IllustrationPreference
		android:key="theme_illustration"
		app:lottie_rawRes="@raw/theme"
		search:ignore="true" />

	<sh.siava.pixelxpert.ui.preferences.MaterialPreference
		android:key="icon_packs"
		android:title="@string/icon_packs_title"
		app:fragment="sh.siava.pixelxpert.ui.fragments.iconpack.IconPackFragment"
		app:iconSpaceReserved="false" />

	<sh.siava.pixelxpert.ui.preferences.MaterialSwitchPreference
		android:defaultValue="false"
		android:key="ForceThemedLauncherIcons"
		android:summary="@string/force_themed_icons_summary"
		android:title="@string/force_themed_icons_title"
		app:iconSpaceReserved="false" />

</PreferenceScreen>